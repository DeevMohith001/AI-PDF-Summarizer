{
  "name": "ChatMessage",
  "type": "object",
  "properties": {
    "document_id": {
      "type": "string",
      "description": "ID of the related document"
    },
    "role": {
      "type": "string",
      "enum": [
        "user",
        "assistant"
      ],
      "description": "Message sender"
    },
    "content": {
      "type": "string",
      "description": "Message content"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "When the message was sent"
    }
  },
  "required": [
    "document_id",
    "role",
    "content"
  ]
}